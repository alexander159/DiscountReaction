<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MeasureSoundActivity">

    <LinearLayout
        android:id="@+id/cameraPreviewLinLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/timeCounterTextView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/time_counter_text_color"
        android:textSize="100sp" />

    <View
        android:id="@+id/separatorView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/rightBackImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/separatorView"
        android:layout_toRightOf="@+id/separatorView"
        android:scaleType="centerCrop"
        android:src="@drawable/screen02_right" />

    <ImageView
        android:id="@+id/meterImageView"
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:layout_alignEnd="@+id/rightBackImageView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/rightBackImageView"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/separatorView"
        android:layout_toRightOf="@+id/separatorView"
        android:scaleType="centerCrop"
        android:src="@drawable/screen02_meter" />

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="552dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/rightBackImageView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/rightBackImageView"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="63dp"
        android:scaleType="fitCenter"
        android:src="@drawable/screen02_meter_arrow_full" />
</RelativeLayout>